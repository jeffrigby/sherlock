{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <form method="get" action="/meta">
            <div class="input-group">
                <input type="text" class="form-control" name="q" value="{{ q }}" placeholder="Search for...">
                <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="this.form.submit();">Go!</button>
              </span>
            </div><!-- /input-group -->
        </form>
    </div>
    {% if not q is empty %}
    <div class="row">
        <div class="panel panel-default" id="cloudsite">
            <div class="panel-heading">
                <h3 class="panel-title">Google (Wikipedia Only)</h3>
            </div>
            <div class="panel-body">
                <div class="json"><pre>{{ google }}</pre></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default" id="cloudsite">
            <div class="panel-heading">
                <h3 class="panel-title">Bing</h3>
            </div>
            <div class="panel-body">
                <div class="json"><pre>{{ bing }}</pre></div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

